<div class="modal-overlay"></div>

<div class="modal" id="login_modal">
  <h1>Sign in to your account</h1>
  <form id="login_form">
    <div class="field">
      <label for="user_name">Username</label>
      <input id="user_name" name="user_name" type="text" />
    </div>
    <div class="field">
      <label for="user_password">Password</label>
      <input id="user_password" name="user_password" type="password" />
    </div>
    <button class="secondary small" type="submit">Login</button>
  </form>
  <a class="close"></a>
</div>

<div class="modal" id="email_modal" style="width:580px;height:auto;">
  <h1>Let Us email you</h1>
  <form id="login_form">
    <div class="field">
      <label for="user_name">Username</label>
      <input id="user_name" name="user_name" type="text" />
    </div>
    <div class="field">
      <label for="user_email">Email Address</label>
      <input id="user_email" name="user_email" type="text" />
    </div>
    <div class="field">
      <label for="user_password">Password</label>
      <input id="user_password" name="user_password" type="password" />
    </div>
    <div class="field">
      <label for="confirm_user_password">Confirm Password</label>
      <input id="confirm_user_password" name="confirm_user_password" type="password" />
    </div>
    <button class="secondary small" type="submit">Login</button>
  </form>
  <a class="close"></a>
</div>
